/**app.wxss**/
@import "we-ui/style/weui.wxss";
page{
  min-height:100%;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  font-size:32rpx;
} 
.card{
  background:#fff;
  font-size:30rpx;
  margin:20rpx 0;
  display: flex;
  flex-direction: column;
}
.card .card-header{
  font-size:35rpx;
  padding:20rpx 20rpx;
  border-bottom:1rpx solid #eee;
}
.card .card-body{
  padding:20rpx;
}
.weui-cells{
  margin:0;
}