<!--index.wxml-->
<!--1px = 750/320 = 2.34rpx;-->
<view class="container">
   <view class="swiper-container">
        <swiper class="swiper_box" 
                    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperchange">
            <block wx:for="{{banners}}" wx:key="banners">
                <swiper-item>
                    <image bindtap="tapBanner" data-id="{{item.productId}}" src="{{serverUrl+'/'+item.img}}" class="slide-image" width="750rpx" height="562.5rpx"/>
                </swiper-item>
            </block>
        </swiper>
        <view class="dots">  
            <block wx:for="{{banners}}" wx:key="unique">  
                <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>  
            </block>  
        </view>  
   </view>

    <view class="goods-container">
    <view class='goods-title'>热销商品</view>
        <view class="goods-box" wx:for="{{goodsList}}" wx:key="goods" bindtap="toDetailsTap" data-id="{{item.id}}">
           <view class="img-box">
              <image src="{{serverUrl+'/'+item.img}}" class="image"/>
           </view>
           <view class="goods-title">{{item.name}}</view>
           <view class="goods-price">¥ {{item.price}}</view>
        </view>
    </view>
    <view hidden="{{loadingMoreHidden ? true : false}}" class="no-more-goods">没有更多啦</view>
</view>
